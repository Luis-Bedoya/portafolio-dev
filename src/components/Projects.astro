---
import AstroIcon from "./icons/AstroIcon.astro";
import TailwindIcon from "../components/icons/Tailwind.astro";

const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "bg-[#0c0f15] text-white",
    icon: AstroIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#0a1121] text-white",
    icon: TailwindIcon,
  },
};
const PROJECTS = [
  {
    title: "(Place holder for projects) Luis Castano - Portafolio",
    description:
      "This portfolio shows my work and skills in a straightforward way. It includes both my job projects and the things I love to do, making it easy to see what I'm good at.",
    link: "#",
    github: "#",
    image: "/projects/svgl.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map((project) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">
        {project.title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{project.description}</p>
      <ul class="flex gap-x-4 flex-row">
        {project.tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class}`}>
            <tag.icon class="size-4" />
            {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-xl shadow-white/5"
        src={project.image}
        alt={`Image of the project ${project.image}`}
      />
    </article>
  ))
}
